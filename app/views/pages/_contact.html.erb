<section class="page-section pt-4" id="contact">
  <div class="title">
    <h2 class="heading-primary--sub text-white">Contate-Nos
    </h2>
    <div class="textBox--h3 my-3" data-aos="fade-down" data-aos-duration="5000"><span class="typing"></span></div>
    <p class="heading-primary--main text-light">
      Entre em contato através de nossos emails ou ligue para nós, estaremos sempre prontos para atendê-lo
    </p>
  </div>

  <div class="contact-in">
    <div class="contact-map">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2140.206629551011!2d-7.915968971714479!3d40.6583393077326!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd23364d407f8e07%3A0xf5c1f7374bf66877!2zQ2zDrW5pY2EgTcOpZGljYSBEZW50w6FyaWEgR3LDo28gVmFzY28!5e0!3m2!1ses!2sve!4v1608395036775!5m2!1ses!2sve"
        width="100%" height="auto" frameborder="0" style="border:0" allowfullscreen>
      </iframe>
    </div>

    <div class="contact-form">
      <%= form_with(scope: :contact, url: contacts_path) do |f| %>
        <div class="form-row">
          <div class="col form-group">
            <%= f.text_field :first_name, class: "form-control", placeholder: "First name", id:"inputFirstName" %>
          </div>

          <div class="col form-group">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last name", id:"inputLastName" %>
          </div>
        </div>

        <div class="form-row">
          <div class="col form-group">
            <%= f.text_field :email, class: "form-control", placeholder: "Email", id:"inputEmail" %>
          </div>
        </div>

        <div class="form-row">
          <div class="col form-group">
            <%= f.number_field :phone, class: "form-control", placeholder: "Number", id:"inputPhone" %>
          </div>
        </div>

        <div class="form-row">
          <div class="col d-flex justify-content-center">
            <%= f.submit "Enviar Mensagem" ,class: "btn btn--white btn-dark" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
