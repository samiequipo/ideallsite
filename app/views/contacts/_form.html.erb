<div class="row">
  <div class="col">
    <%= form_with(scope: :contact, url: contacts_path, remote: true) do |f| %>
      <div class="form-group row">
        <div class="col-sm-2 offset-sm-1">
          <%= f.label :first_name, for: "inputFirstName", class: "col-form-label" %>
        </div>

        <div class="col-sm-7">
          <%= f.text_field :first_name, class: "form-control", id:"inputFirstName" %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-2 offset-sm-1">
          <%= f.label :last_name, for: "inputLastName", class: "col-form-label" %>
        </div>

        <div class="col-sm-7">
          <%= f.text_field :last_name, class: "form-control", id:"inputLastName" %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-2 offset-sm-1">
          <%= f.label :email, for: "inputEmail", class: "col-form-label" %>
        </div>

        <div class="col-sm-7">
          <%= f.text_field :email, class: "form-control", id:"inputEmail" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2 offset-sm-1">
          <%= f.label :phone, for: "inputPhone", class: "col-form-label" %>
        </div>

        <div class="col-sm-7">
          <%= f.text_area :phone, class: "form-control h-55", id:"inputPhone" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10 d-flex justify-content-end">
          <%= f.submit class: "btn btn-dark" %>
        </div>
      </div>
    <% end %>
  </div>
</div>