<%= form_with(model: @contact, url: contacts_path) do |f| %>
  <div class="wrap-input2 validate-input">
    <%= f.label :first_name, "Name", class: "wrap-input2 validate-input" %>
    <%= f.text_field :first_name, class: "form-control", placeholder: "First name", id:"inputFirstName" %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, "Name" %>
    <%= f.text_field :email, class: "form-control", placeholder: "Email", id:"inputEmail" %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, "Name" %>
    <%= f.number_field :phone, class: "form-control", placeholder: "Number", id:"inputPhone" %>
    <small id="emailHelp" class="form-text text-muted">
      <em>Nunca compartilharemos seu informação pessoal.</em>
    </small>
  </div>

  <div class="form-group d-none">
    <%= f.text_field :operator, value: @contact.operator, class: "form-control" %>
  </div>

  <div class="form-group d-flex justify-content-end">
    <%= f.submit "Fale Connosco", class: "btn btn--white btn-cstm-dark btn-block btn-cta" %>
  </div>
<% end %>
