<%= form_with(model: @contact, url: contacts_path) do |f| %>
  <div class="form-group form-input">
    <%= f.text_field :first_name, required: true %>
    <%= f.label :first_name, "Qual é seu nome?", class:"form-label" %>
  </div>

  <div class="form-group form-input">
    <%= f.email_field :email, required: true %>
    <%= f.label :email, "Qual é seu email?", class:"form-label" %>
  </div>

  <div class="form-group d-none">
    <%= f.text_field :operator, value: @contact.operator, class: "form-control" %>
  </div>

  <div class="form-group form-input">
    <%= f.number_field :phone, required: true %>
    <%= f.label :phone, "Qual é seu numero de telefone?", class:"form-label" %>
    <small id="emailHelp" class="form-text text-muted">
      <em class="mt-0 ml-1">"Nunca compartilharemos seu informação pessoal com qualquer outra pessoa!."</em>
    </small>
  </div>

  <div class="form-group mt-4">
    <%= f.submit "Fale Connosco", class: "btn btn--white btn-cstm-dark btn-block btn-cta" %>
  </div>
<% end %>
