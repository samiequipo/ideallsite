<!DOCTYPE html>
<html>

  <head>
    <title>Luis Castro | Gestor Comercial</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%# Tab %>
    <%= favicon_link_tag asset_path('lc') %>

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@900&display=swap" rel="stylesheet">

    <!-- AOS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <% unless Rails.env.development? %>
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-JED108J09M"></script>
    <% end  %>
  </head>

  <body id="page-top" class="pb-0">
    <%# ------------------------------------------------------- %>
    <%= render 'layouts/navbar'%>

    <%# Render flash message %>
    <div class="sticky-top">
      <div id="results"></div>
    </div>

    <%= yield %>

    <%# Modal Contacts %>
    <%= render "contacts/modal_contacts" %>

    <% if !current_page?(termos_path) %>
      <!-- Social Contact -->
      <%= render "pages/icons" %>

      <!-- Cookies and privacity -->
      <%= render "pages/cookies" %>
    <% end %>
    <%# ------------------------------------------------------- %>
    
    <!-- FontAwesome -->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>

    <%# Default Page Bootstrap  %>
    <% if current_page?(root_path) %>
      <!-- Bootstrap core JavaScript -->
      <script src="startbootstrap-agency-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <!-- Plugin JavaScript -->
      <script src="startbootstrap-agency-gh-pages/vendor/jquery-easing/jquery.easing.min.js"></script>
      <!-- Custom scripts for this template -->
      <script src="startbootstrap-agency-gh-pages/js/agency.min.js"></script>
    <% end %>
    
    <!-- AOS Moving-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <%= javascript_pack_tag 'service' %>

    <!-- Target Blank whatsapp -->
    <script>
      $('.popup').click(function(e) {
        e.preventDefault();
        $(this).closest('form').attr('target', '_blank').submit()
        });
    </script>

    <%# BUTTON PACOTES MEO NOS VODAFONE NOWO %>
    <% if !current_page?(root_path) %>
      <script>
        $("#tile-1 .nav-tabs a").click(function () {
          var position = $(this).parent().position();
          var width = $(this).parent().width();
          $("#tile-1 .slider").css({
            "left": +position.left,
            "width": width
          });
        });
        var actWidth = $("#tile-1 .nav-tabs").find(".active").parent("li").width();
        var actPosition = $("#tile-1 .nav-tabs .active").position();
        $("#tile-1 .slider").css({
          "left": +actPosition.left,
          "width": actWidth
        });
      </script>
    <% end  %>

    <%# DINAMIC ICONS %>
    <script>
      var $screen = $(".screen"),
          $call = $(".call"),
          $callMenu = $(".call-menu"),
          $callItems = $(".call-items"),
          $notCall = $("body").not( $(".call") );
          $ligueExpand = $(".ligueExpand");
      
      $notCall.on("click", function () {
        $callItems.slideUp(200);
        $callMenu.find("i").removeClass("fa-times").addClass("fa-bars");
        $screen.hide();
      
      });
      
      $call.on("click", function (event) {
        event.stopPropagation();
        $callItems.slideToggle(200);
        $callMenu.find("i").toggleClass("fa-bars fa-times");
        $call.css('width', '3.4rem');
        $ligueExpand.empty();
      
        $screen.toggle();
      
      });
    </script>

    <%# Cookies and privacity %>
    <script>
      function checkAcceptCookies() {
        if (localStorage.acceptCookies == 'true') {
        } else {
          $('#div-cookies').show();
        }
      }
      
      function acceptCookies() {
        localStorage.acceptCookies = 'true';
        $('#div-cookies').hide();
      }
      
      $(document).ready(function() {
          checkAcceptCookies();
      });
    </script>
  </body>
</html>
