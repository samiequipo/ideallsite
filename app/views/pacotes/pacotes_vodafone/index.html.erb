<main>
  <section class="menu-pricing p-0">
    <div class="hero--main__vodafone"></div>

    <div class="tile" id="tile-1">
      <ul class="nav nav-tabs nav-tabs_vodafone nav-justified" role="tablist">
        <div class="slider slider_vodafone"></div>

        <li class="nav-item">
          <%= link_to telemovel_vodafone_path(option: "telemovel"), {remote: true, id:"home-tab", class: "nav-link active", "data-toggle" => "tab" }  do %>
            <span class=""><i class="fas fa-mobile-alt"></i><br>
               Telemovel</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to tv_net_voz_vodafone_path(option: "tv_net_voz"), {remote: true, id:"home-tab", class: "nav-link", "data-toggle" => "tab" }  do %>
            <span class=""><i class="fas fa-tv"></i><br>
               Tv_net_voz</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to net_vodafone_path(option: "net"), {remote: true, id:"home-tab", class: "nav-link", "data-toggle" => "tab" }  do %>
            <span class=""><i class="fas fa-wifi"></i><br>
               Internet</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to outros_vodafone_path(option: "outros"), {remote: true, id:"home-tab", class: "nav-link", "data-toggle" => "tab" }  do %>
            <span class=""><i class="fas fa-box"></i><br>
               Outros</span>
          <% end %>
        </li>
      </ul>
    </div>

    <div id="result-menu" class="bg-fibra-meo">
      <%= render "pacotes/pacotes_vodafone/telemovel"%>
    </div>
  </section>
</main>

<%= render 'pages/footer' %>
