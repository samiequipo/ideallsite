<main>
  <section class="menu-pricing p-0">

    <%# <%= render 'shared/nav_promo' %>

    <section class="hero--main">
      <div class="fibra-meo ml-5">
        <h2 class="heading-primary--main fibra-meo-title">Samsung Galaxy S21</h2>
        <p class="heading-primary--sub mb-5 fibra-meo-subtitle">com exclusivo de 12 meses de 5G à máxima velocidade</p>
      </div>

      <div id="services"></div>
    </section>

    <div class="title title-meo-pacotes my-0 pt-5" style="background-color:#e4eefa; ">
      <h2 class="heading-primary--main mb-5">
        Os melhores pacotes para sua casa <span class="meo-interro" data-aos="fade-down">!!!</span>
      </h2>
    </div>

    <div class="tile" id="tile-1">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs nav-justified" role="tablist">
        <div class="slider"></div>

        <li class="nav-item">
          <%= link_to telemovel_meo_path(option: "telemovel"), {remote: true, id:"home-tab", class: "nav-link active", "data-toggle" => "tab" }  do %>
            <span class="d-none d-md-block"><i class="fas fa-home"></i> Telemovel</span>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to tv_net_voz_meo_path(option: "tv_net_voz"), {remote: true, id:"home-tab", class: "nav-link", "data-toggle" => "tab" }  do %>
            <i class="fas fa-home"></i> Tv_net_voz
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to gaming_meo_path(option: "gaming"), {remote: true, id:"home-tab", class: "nav-link", "data-toggle" => "tab" }  do %>
            <i class="fas fa-home"></i> Gaming
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to outros_meo_path(option: "outros"), {remote: true, id:"home-tab", class: "nav-link", "data-toggle" => "tab" }  do %>
            <i class="fas fa-home"></i> Outros
          <% end %>
        </li>
      </ul>
    </div>

    <div id="result-menu" class="bg-fibra-meo">
      <%= render  "pacotes/pacotes_meo/telemovel"%>
    </div>
  </section>
</main>

<%= render 'pages/footer' %>
